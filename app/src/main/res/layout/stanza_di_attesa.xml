<?xml version="1.0" encoding="utf-8"?>
<!-- Uso un relative layout per poter piazzare dei bottoni sopra l'immagine-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.99"
    android:gravity="center"
    android:orientation="vertical"
    app:barrierMargin="10dp"
    tools:context="Home.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="870px"
            android:layout_height="1000px"
            android:background="@drawable/round_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.325">

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="25dp"
                android:background="#FFFFFF"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helper">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

                <ImageView
                    android:id="@+id/android1"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:contentDescription="@null"
                    android:src="@drawable/subtracted_circle" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="#FFFFFF"
                app:layout_constraintBottom_toTopOf="@+id/helper1"
                app:layout_constraintStart_toStartOf="@+id/frameLayout3">

                <ImageView
                    android:id="@+id/friendProfilePicture2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

                <ImageView
                    android:id="@+id/android2"
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:contentDescription="@null"
                    android:src="@drawable/subtracted_circle" />
            </FrameLayout>

            <View
                android:id="@+id/helper"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="@+id/helper1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.695"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/helper6"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#039846"
                app:layout_constraintBottom_toTopOf="@+id/helper"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titolo" />

            <View
                android:id="@+id/helper1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/helper7"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#039846"
                app:layout_constraintBottom_toTopOf="@+id/helper4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helper1" />

            <View
                android:id="@+id/helper4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toTopOf="@+id/helper2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helper1" />

            <View
                android:id="@+id/helper2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="#039846"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helper1" />

            <View
                android:id="@+id/helper3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                app:layout_constraintBottom_toTopOf="@+id/helper"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/titolo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/carter_one"
                android:paddingRight="2dp"
                android:shadowColor="#000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="@string/waitroom"
                android:textAllCaps="true"
                android:textColor="#039846"
                android:textSize="26sp"
                app:layout_constraintBottom_toBottomOf="@+id/helper3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/helper3" />

            <TextView
                android:id="@+id/nome1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:text="Nome host"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/frameLayout3"
                app:layout_constraintStart_toEndOf="@+id/frameLayout3"
                app:layout_constraintTop_toBottomOf="@+id/helper" />

            <TextView
                android:id="@+id/nome2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/waitopponent"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/frameLayout4"
                app:layout_constraintStart_toStartOf="@+id/nome1"
                app:layout_constraintTop_toTopOf="@+id/frameLayout4" />

            <TextView
                android:id="@+id/codice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:paddingRight="2dp"
                android:shadowColor="#000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="@string/code"
                android:textAllCaps="true"
                android:textColor="#039846"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helper2" />

            <TextView
                android:id="@+id/stato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:paddingRight="2dp"
                android:shadowColor="#000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1.5"
                android:text="@string/state"
                android:textAllCaps="true"
                android:textColor="#039846"
                android:textSize="22sp"
                app:layout_constraintBottom_toTopOf="@+id/helper2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/helper7" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="50px"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/nome2"
                app:layout_constraintStart_toEndOf="@+id/nome2"
                app:layout_constraintTop_toTopOf="@+id/nome2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/chiudisala"
            android:layout_width="430px"
            android:layout_height="120px"
            android:alpha="0.85"
            android:background="@drawable/red_button"
            android:text="@string/leavegame"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>