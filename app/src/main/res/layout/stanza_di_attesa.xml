<?xml version="1.0" encoding="utf-8"?>
<!-- Uso un relative layout per poter piazzare dei bottoni sopra l'immagine-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.99"
    android:gravity="center"
    android:orientation="vertical"
    app:barrierMargin="10dp"
    tools:context="Home.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sfondo">

        <View
            android:id="@+id/box"
            android:layout_width="290dp"
            android:layout_height="375dp"
            android:background="@drawable/round_box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.283" />

        <View
            android:id="@+id/seperator1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/purple_500"
            app:layout_constraintEnd_toEndOf="@+id/box"
            app:layout_constraintStart_toStartOf="@+id/box"
            app:layout_constraintTop_toBottomOf="@+id/titolo" />

        <View
            android:id="@+id/seperator2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="200dp"
            android:background="@color/purple_500"
            app:layout_constraintEnd_toEndOf="@+id/box"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/box"
            app:layout_constraintTop_toBottomOf="@+id/titolo" />

        <View
            android:id="@+id/seperator3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="@color/purple_500"
            app:layout_constraintEnd_toEndOf="@+id/box"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/box"
            app:layout_constraintTop_toBottomOf="@+id/stato" />

        <Button
            android:id="@+id/chiudisala"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:alpha="0.85"
            android:background="@drawable/red_button"
            android:text="Chiudi sessione"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/box" />

        <TextView
            android:id="@+id/titolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#00000000"
            android:text="SALA D'ATTESA"
            android:textAllCaps="true"
            android:textColor="@color/purple_700"
            android:textSize="24sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="@+id/box"
            app:layout_constraintStart_toStartOf="@+id/box"
            app:layout_constraintTop_toTopOf="@+id/box" />

        <TextView
            android:id="@+id/stato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#00000000"
            android:text="stato: in attesa"
            android:textAllCaps="true"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/box"
            app:layout_constraintStart_toStartOf="@+id/box"
            app:layout_constraintTop_toBottomOf="@+id/seperator2" />

        <TextView
            android:id="@+id/codice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="codice: "
            android:textAllCaps="true"
            android:textColor="@color/purple_700"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/box"
            app:layout_constraintEnd_toEndOf="@+id/box"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@+id/box"
            app:layout_constraintTop_toBottomOf="@+id/seperator3" />

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/friendProfilePicture1"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="35dp"
            android:padding="1sp"
            android:paddingRight="10sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/box"
            app:layout_constraintTop_toBottomOf="@+id/seperator1">

        </com.facebook.login.widget.ProfilePictureView>

        <TextView
            android:id="@+id/nome1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="Utente numero 1"
            app:layout_constraintStart_toEndOf="@+id/friendProfilePicture1"
            app:layout_constraintTop_toTopOf="@+id/friendProfilePicture1" />

        <com.facebook.login.widget.ProfilePictureView
            android:id="@+id/friendProfilePicture2"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginBottom="35dp"
            android:padding="1sp"
            android:paddingRight="10sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/seperator2"
            app:layout_constraintStart_toStartOf="@+id/box">

        </com.facebook.login.widget.ProfilePictureView>

        <TextView
            android:id="@+id/nome2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:text="In attesa dell'avversario..."
            app:layout_constraintStart_toEndOf="@+id/friendProfilePicture2"
            app:layout_constraintTop_toTopOf="@+id/friendProfilePicture2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>