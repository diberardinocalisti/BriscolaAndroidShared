<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postpartita"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pareggio">

    <TextView
        android:id="@+id/esito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:shadowColor="#000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.5"
        android:text="PAREGGIO!"
        android:textColor="#fff"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/sottotitolo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/sottotitolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:fontFamily="@font/carter_one"
        android:shadowColor="#000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.5"
        android:text="LE TUE MIGLIORI CARTE"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.443"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/stella1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/esito"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/esito"
        app:layout_constraintTop_toBottomOf="@+id/esito"
        app:srcCompat="@android:drawable/star_big_on" />

    <ImageView
        android:id="@+id/stella2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/stella1"
        app:layout_constraintTop_toBottomOf="@+id/esito"
        app:srcCompat="@android:drawable/star_big_on" />

    <ImageView
        android:id="@+id/stella3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/stella2"
        app:layout_constraintTop_toBottomOf="@+id/esito"
        app:srcCompat="@android:drawable/star_big_on" />

    <TextView
        android:id="@+id/nPunti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/carter_one"
        android:text="+0 PUNTI"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:shadowColor="#000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.5"
        app:layout_constraintBottom_toBottomOf="@+id/stella3"
        app:layout_constraintStart_toEndOf="@+id/stella3"
        app:layout_constraintTop_toBottomOf="@+id/esito" />

    <ImageView
        android:id="@+id/carta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/carta2"
        app:layout_constraintEnd_toStartOf="@+id/carta2"
        app:layout_constraintTop_toTopOf="@+id/carta2"
        app:srcCompat="@drawable/vuoto" />

    <ImageView
        android:id="@+id/carta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sottotitolo"
        app:srcCompat="@drawable/vuoto" />

    <ImageView
        android:id="@+id/carta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/carta2"
        app:layout_constraintStart_toEndOf="@+id/carta2"
        app:layout_constraintTop_toTopOf="@+id/carta2"
        app:srcCompat="@drawable/vuoto" />

    <Button
        android:id="@+id/restart"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:alpha="0.85"
        android:background="@drawable/yellow_button"
        android:text="GIOCA DI NUOVO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carta2" />

    <Button
        android:id="@+id/exit"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:alpha="0.85"
        android:background="@drawable/red_button"
        android:text="TORNA AL MENU"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restart" />

</androidx.constraintlayout.widget.ConstraintLayout>