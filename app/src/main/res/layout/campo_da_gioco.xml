<?xml version="1.0" encoding="utf-8"?>
<!-- Uso un relative layout per poter piazzare dei bottoni sopra l'immagine-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.99"
    android:gravity="center"
    android:orientation="vertical"
    app:barrierMargin="10dp"
    tools:context="Home.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sfondo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/sfondo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">


            <Button
                android:id="@+id/button6"
                android:layout_width="190px"
                android:layout_height="304px"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/vuoto"
                app:layout_constraintBottom_toBottomOf="@+id/button5"
                app:layout_constraintStart_toEndOf="@+id/button5"
                app:layout_constraintTop_toTopOf="@+id/button5" />

            <Button
                android:id="@+id/button9"
                android:layout_width="190px"
                android:layout_height="304px"
                android:background="@drawable/vuoto"
                app:layout_constraintBottom_toTopOf="@+id/button8"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toEndOf="@+id/button1" />

            <ImageView
                android:id="@+id/button7"
                android:layout_width="190px"
                android:layout_height="304px"
                android:layout_marginStart="42dp"
                android:layout_marginLeft="42dp"
                android:background="@drawable/vuoto"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:rotation="90"
                app:layout_constraintBottom_toBottomOf="@+id/button8"
                app:layout_constraintEnd_toEndOf="@+id/button8"
                app:layout_constraintHorizontal_bias="0.095"
                app:layout_constraintStart_toStartOf="@+id/button8"
                app:layout_constraintTop_toTopOf="@+id/button8"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/button8"
                android:layout_width="190px"
                android:layout_height="304px"
                android:background="@drawable/vuoto"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/mazzo1"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view3"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="0dp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="190px"
                android:layout_height="304px"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/vuoto"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button2" />

            <Button
                android:id="@+id/button3"
                android:layout_width="190px"
                android:layout_height="304px"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/vuoto"
                app:layout_constraintBottom_toBottomOf="@+id/button2"
                app:layout_constraintStart_toEndOf="@+id/button2"
                app:layout_constraintTop_toTopOf="@+id/button2" />

            <Button
                android:id="@+id/n_carte"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/round_white"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:linksClickable="false"
                android:text="0"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@+id/button8"
                app:layout_constraintEnd_toEndOf="@+id/button8"
                app:layout_constraintStart_toStartOf="@+id/button8"
                app:layout_constraintTop_toTopOf="@+id/button8">

            </Button>

            <Button
                android:id="@+id/button4"
                android:layout_width="190px"
                android:layout_height="304px"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/vuoto"
                app:layout_constraintBottom_toBottomOf="@+id/button5"
                app:layout_constraintEnd_toStartOf="@+id/button5"
                app:layout_constraintTop_toTopOf="@+id/button5" />

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/friendProfilePictureUser"
                android:layout_width="125px"
                android:layout_height="125px"
                android:layout_marginBottom="15dp"
                android:padding="1sp"
                android:paddingRight="10sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button4"
                app:layout_constraintHorizontal_bias="0.564"
                app:layout_constraintStart_toStartOf="parent">

            </com.facebook.login.widget.ProfilePictureView>

            <Button
                android:id="@+id/button5"
                android:layout_width="190px"
                android:layout_height="304px"
                android:background="@drawable/vuoto"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button10" />

            <Button
                android:id="@+id/button10"
                android:layout_width="190px"
                android:layout_height="304px"
                android:background="@drawable/vuoto"
                app:layout_constraintEnd_toEndOf="@+id/button5"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/button5"
                app:layout_constraintTop_toBottomOf="@+id/button7" />

            <Button
                android:id="@+id/button2"
                android:layout_width="190px"
                android:layout_height="304px"
                android:background="@drawable/vuoto"
                app:layout_constraintBottom_toTopOf="@+id/button9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/friendProfilePictureEnemy"
                android:layout_width="125px"
                android:layout_height="125px"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/mazzo0"
                android:layout_width="190px"
                android:layout_height="304px"
                android:rotation="90"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/button9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/button3"
                app:layout_constraintTop_toTopOf="@+id/button9"
                app:srcCompat="@drawable/vuoto" />

            <ImageView
                android:id="@+id/mazzo1"
                android:layout_width="304px"
                android:layout_height="304px"
                android:rotation="90"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="@+id/button10"
                app:layout_constraintEnd_toEndOf="@+id/button1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/button10"
                app:srcCompat="@drawable/vuoto" />

            <ImageButton
                android:id="@+id/settings"
                android:layout_width="125px"
                android:layout_height="125px"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_button"
                android:src="@drawable/ic_baseline_settings_24"
                app:layout_constraintEnd_toStartOf="@+id/button1"
                app:layout_constraintHorizontal_bias="0.564"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints">

            </ImageButton>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>